<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="paneRoot" prefHeight="309.0" prefWidth="494.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.honda.library.view.controller.MemberAdd">
    <VBox prefHeight="328.0" prefWidth="494.0">
        <MFXTextField fx:id="txtName" floatMode="ABOVE" floatingTextGap="0.0" prefHeight="51.0"
                      prefWidth="883.0" promptText="Name">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
            </VBox.margin>
        </MFXTextField>
        <MFXTextField fx:id="txtId" floatMode="ABOVE" prefHeight="51.0" prefWidth="883.0"
                      promptText="Member ID">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
            </VBox.margin>
        </MFXTextField>
        <MFXTextField fx:id="txtMobile" floatMode="ABOVE" prefHeight="51.0" prefWidth="883.0"
                      promptText="Mobile">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
            </VBox.margin>
        </MFXTextField>
        <MFXTextField fx:id="txtEmail" floatMode="ABOVE" prefHeight="51.0" prefWidth="883.0" promptText="Email">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
            </VBox.margin>
        </MFXTextField>
        <HBox prefHeight="70.0" prefWidth="494.0">
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
            <MFXButton fx:id="btnSave" onAction="#btnSave_Click" prefHeight="106.0" prefWidth="287.0"
                       stylesheets="@../book-add/book-add.css" text="Save">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </MFXButton>
            <MFXButton fx:id="btnCancel" onAction="#btnCancel_Click" prefHeight="106.0" prefWidth="287.0"
                       stylesheets="@../book-add/book-add.css" text="Cancel">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </MFXButton>
        </HBox>
    </VBox>
</AnchorPane>
